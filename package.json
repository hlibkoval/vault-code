{
  "name": "vault-code",
  "version": "0.1.0",
  "description": "Claude Code in your Obsidian sidebar",
  "main": "main.js",
  "type": "module",
  "obsidian": {
    "bundleFiles": [
      "main.js",
      "manifest.json",
      "styles.css",
      "symbols-nerd-font.woff2"
    ]
  },
  "scripts": {
    "dev": "node scripts/esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node scripts/esbuild.config.mjs production",
    "version": "node scripts/version-bump.mjs && git add manifest.json versions.json",
    "lint": "eslint -c scripts/eslint.config.mts src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "obsidian",
    "terminal",
    "claude"
  ],
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.30.1",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "esbuild": "0.25.5",
    "eslint-plugin-obsidianmd": "0.1.9",
    "globals": "14.0.0",
    "happy-dom": "^15.11.7",
    "jiti": "2.6.1",
    "tslib": "2.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.35.1",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "obsidian": "latest"
  }
}
